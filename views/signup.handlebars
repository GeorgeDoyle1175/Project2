<div class="mt-20">
  <h2 class="text-center text-3xl font-bold mb-8">Create a Profile</h2>
  <div class="max-w-md mx-auto bg-white rounded-lg overflow-hidden shadow-lg">
    <div class="py-4 px-6">
      <form class="form signup-form">
        <div class="mb-4">
          <label class="block text-gray-700 font-bold mb-2" for="name-signup">
            Name
          </label>
          <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" id="name-signup" name="name-signup" required>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 font-bold mb-2" for="email-signup">
            Email
          </label>
          <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" id="email-signup" name="email-signup" required>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 font-bold mb-2" for="password-signup">
            Password
          </label>
          <input class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="password" id="password-signup" name="password-signup" required>
        </div>
        <div class="flex justify-center">
          <button class="bg-yellow-500 hover:bg-yellow-600 focus:bg-yellow-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" id="signup-btn" type="submit">Signup</button>
        </div>
      </form>
    </div>
  </div>
</div>
